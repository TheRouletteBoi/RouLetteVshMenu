
import modules ;

local dll-suffix = so ;
local prefix = "" ;
if [ modules.peek : OS ] in CYGWIN NT
{
   if $toolset = gcc
   {
      dll-suffix = dll ;
   }
   else
   {
      dll-suffix = lib ;
   }
}
else
{
   prefix = "lib" ;      
}
if $toolset = darwin
{
   dll-suffix = dylib ;
}

project ext ;

lib a : 
    : <file>debug/$(prefix)a.$(dll-suffix) <variant>debug
    :
    : <include>debug
    ;
    
lib a :
    : <file>release/$(prefix)a.$(dll-suffix) <variant>release
    :
    : <include>release
    ;
    
